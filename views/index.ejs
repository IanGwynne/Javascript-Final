<!DOCTYPE html>
<!--Ian Haworth-->
<html>
  <head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Ian Haworth</p>

    <div class="border p-5 bg-light col-6">
      <h1>One listing</h1>
      <form action="/airbnb/find-one">
        <label for="bedrooms">Minimum number of bedrooms</label>
        <input type="text" id="bedrooms" name="bedrooms" value="1"><br><br>

        <label for="guests">Maximum number of guests</label>
        <input type="text" id="guests" name="guests" value="1"><br><br>

        <label for="night">Maximum price per night</label>
        <input type="text" id="night" name="night" value="100"><br><br>
        <h2>Amenities</h2>
            <input type="checkbox" name="amenities[]" id="wifi" value="49fcaedc-481a-4e05-934f-4867988c8ec5">
            <label for="wifi">Wireless Internet</label><br>
            <input type="checkbox" name="amenities[]" id="pool" value="f4e98f0a-053a-42e2-9633-0cca2a587410">
            <label for="pool">Pool</label><br>
            <input type="checkbox" name="amenities[]" id="breakfast" value="9c54e3ed-48b3-4438-bb2c-304e14a9bde4">
            <label for="breakfast">Breakfast</label><br>
            <input type="checkbox" name="amenities[]" id="Cable" value="017ec502-e84a-4a0f-92d6-d97e27bb6bdf">
            <label for="Cable">Cable TV</label><br>
            <input type="checkbox" name="amenities[]" id="Gym" value="416cddd7-746e-4715-821c-3ad30b9bc3c3">
            <label for="Gym">Gym</label><br>
  
        <br><br>
        <input type="submit" value="Send Query">
      </form>
    </div>

    <div class="border p-5 mt-5 bg-light col-6">
      <h1>Many listings</h1>
      <form action="/airbnb/find-many">
        <label for="bedrooms">Minimum number of bedrooms</label>
        <input type="text" id="bedrooms" name="bedrooms"><br>

        <select class="state" name="state" id="state">
          <option selected>-- Select State --</option>
            <% for(let i = 0; i < state.length; i++) { %>
              <option value = <%= state[i].id %>><%= state[i].name %></option>
              <% } %>
        </select><br><br>
        
        <select class="city" name="city" id="city">
          <option selected>-- Select City --</option>

          <!--
            <% for(let i = 0; i < city.length; i++) { %>
              <option value = <%= city[i].id %>><%= city[i].name %></option>
              <% } %>
            -->

        </select><br><br>
        <input type="submit" value="Send Query">
        
      </form>
    </div>
    <!--src="/script.js"-->
    <script type="text/javascript" >
      const selectState = document.querySelector('.state');
      let selectCity = document.querySelector('.city');
      //const selectCity = document.querySelector('.city');
      selectState.addEventListener('change', (event) => {
        selectCity.innerHTML = "<option selected>-- Select City --</option>";
        const result = document.querySelector('.result');
        '<% for(let i = 0; i < city.length; i++) { %>'
          if('<%=city[i].state_id%>' == event.target.value)
            selectCity.innerHTML += 
                    `<option value="<%=city[i].id%>">
                      <%=city[i].name%>
                    </option>`;
          '<% } %>'
      });
    </script>
  </body>
</html>
